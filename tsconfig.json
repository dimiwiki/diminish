{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"outDir": "distribution",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"baseUrl": ".",
		"paths": {
			"@library/*": ["source/library/*", "distribution/library/*"],
			"@schema/*": ["source/schema/*", "distribution/schema/*"],
			"@entity/*": ["source/entity/*", "distribution/entity/*"]
		},
		"experimentalDecorators": true,
		"skipLibCheck": false,
		"forceConsistentCasingInFileNames": true,
		"removeComments": true
	},
	"exclude": ["node_modules", "distribution/**/*"],
	"include": ["source/**/*"]
}